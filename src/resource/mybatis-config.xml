<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!--mybatis中把日志文件打印到控制台上-->

        <!--注释1-->
        <!-- 映射下划线到驼峰命名全局的配置   -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!-- 配置开启二级缓存 -->
        <setting name="cacheEnabled" value="true"/>
        <!--开启控制台打印SQL-->
        <setting name="logImpl" value="STDOUT_LOGGING"/>

    </settings>
    <!-- 配置mybatis运行环境 -->
    <environments default="development">
        <environment id="development">
            <!-- 使用JDBC的事务管理 -->
            <transactionManager type="JDBC" />
            <dataSource type="POOLED">
                <!-- MySQL数据库驱动 8.0 com.mysql.cj.jdbc.Driver-->
                <property name="driver" value="com.mysql.cj.jdbc.Driver" />
                <!-- 连接数据库的URL -->
                <property name="url"
                          value="jdbc:mysql://localhost:3306/dmsys?useSSL=true&amp;useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=Asia/Shanghai" />
                <property name="username" value="root" />
                <property name="password" value="Mgy20030414" />
            </dataSource>
        </environment>
    </environments>
    <!-- 将mapper文件加入到配置文件中 -->
    <mappers>
        <mapper resource="resource/mapper/StudentMapper.xml"/>
        <mapper resource="resource/mapper/DormitoryMapper.xml"/>
        <mapper resource="resource/mapper/DormintoryManagementMapper.xml"/>
    </mappers>
</configuration>